    <body>
        
        <div class="container">
            <div class="jumbotron">
                <h1>Article upload form</h1>
                <p>Fill up the form to enter the article into database</p>
            </div>

            <form method="POST" action="/secret">
                <div class="form-group">Id</label>
                    <input type="text" class="form-control" id="ArticleId" placeholder="Article No." name="id">
                </div>
                <div class="form-group">
                  <label for="ArticleHeading">Heading</label>
                  <input type="text" class="form-control" id="ArticleHeading" placeholder="Heading" name="heading">
                </div>
                <div class="form-group">
                    <label for="ArticleSubheading">Subheading</label>
                    <input type="text" class="form-control" id="ArticleSubheading" placeholder="Subheading" name="subheading">
                  </div>
                <div class="form-group">
                    <label for="ArticledateAndTime">Date and Time</label>
                    <input type="text" class="form-control" id="ArticledateAndTime" placeholder="Date and Time (in EST)" name="dateandtime">
                </div>
                <div class="form-group">
                    <label for="ArticleImage">Image</label>
                    <input type="text" class="form-control" id="ArticleImage" placeholder="Image Name" name="image">
                </div>
                <div class="form-group">
                    <label for="ArticleAltText">Image Alt Text</label>
                    <input type="text" class="form-control" id="ArticleAltText" placeholder="Alt" name="alttext">
                </div>
                <div class="form-group">
                    <label for="ArticleContent">Body</label>
                    <input type="text" class="form-control" id="ArticleContent" placeholder="Text with HTML code" name="body">
                </div>
                <button type="submit" class="btn btn-default">Publish!</button>
              </form>


        </div>
        
        <script src="" async defer></script>
    </body>
